<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:divider="?android:attr/divider"
    tools:context="edu.gatech.uweather.MainActivity">

    <fragment
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:name="edu.gatech.uweather.ForecastFragment"
        android:id="@+id/fragment_forecast"
        android:layout_weight="2"
        tools:layout="@android:layout/list_content"></fragment>
    <fragment
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:id="@+id/weather_detail_container"></fragment>

</LinearLayout>